# .env.example - sample environment variables for Docker Compose
# Copy to .env and fill values. Do NOT commit secrets.

# Postgres
POSTGRES_DB=superset
POSTGRES_USER=superset
POSTGRES_PASSWORD=change_me

# Superset service
SUPERSET_ENV=production
SUPERSET_SECRET_KEY=replace_with_a_secure_value
MAPBOX_API_KEY=
SUPERSET_PORT=8088

# Admin user auto-create (used by docker-compose command)
ADMIN_USERNAME=admin
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin

# LDAP (example)
LDAP_ENABLED=true
LDAP_SERVER=ldap://ldap.company8.local
LDAP_BIND_USER=cn=bind,dc=company8,dc=local
LDAP_BIND_PASSWORD=bind_password
LDAP_SEARCH_BASE=ou=users,dc=company8,dc=local
LDAP_UID_FIELD=uid

# Keycloak / OIDC (example)
OIDC_ENABLED=true
OIDC_CLIENT_ID=superset-client
OIDC_CLIENT_SECRET=CLIENT_SECRET
OIDC_BASE_URL=https://keycloak.company8.com/auth/realms/company8-realm/protocol/openid-connect

# Optional mapping keys sent by IdP
IDP_EMP_CODE_CLAIM=EMP_CODE
IDP_DEPARTMENT_CLAIM=department
IDP_GROUPS_CLAIM=groups
